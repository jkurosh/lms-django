{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "vetlms.settings",
    "USE_SQLITE": "false",
    "DB_NAME": "veterinary_cases",
    "DB_USER": "your_clever_cloud_user",
    "DB_PASSWORD": "your_clever_cloud_password",
    "DB_HOST": "your_clever_cloud_host.com",
    "DB_PORT": "3306"
  }
}
