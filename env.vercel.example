# Vercel Environment Variables Template
# کپی کنید به عنوان .env.local و مقادیر را پر کنید

# Django Settings
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production
DEBUG=False
IS_VERCEL=True
DJANGO_SETTINGS_MODULE=vetlms.settings

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Allowed Hosts
ALLOWED_HOSTS=your-project.vercel.app,yourdomain.com,localhost,127.0.0.1

# Security
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# Payment Gateway (Zarinpal)
ZARINPAL_MERCHANT_ID=your-merchant-id-here
ZARINPAL_ACCESS_TOKEN=your-access-token-here
ZARINPAL_SANDBOX=True
ZARINPAL_CALLBACK_URL=https://your-project.vercel.app/payment/callback/

# SMS Provider (Kavenegar)
KAVENEGAR_API_KEY=your-kavenegar-api-key
KAVENEGAR_SENDER_NUMBER=10004346

# SMS Provider (Faraz SMS)
FARAZ_SMS_API_KEY=your-faraz-api-key
FARAZ_SMS_SENDER_NUMBER=3000505
FARAZ_PATTERN_VERIFICATION=your-verification-pattern
FARAZ_PATTERN_PASSWORD_RESET=your-password-reset-pattern

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_BLOCK_DURATION=300

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=media

# Cache
CACHE_TIMEOUT=60

# Email (اختیاری)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Logging
LOG_LEVEL=WARNING
